{% extends "base.html.twig" %}

{% block title %}OMG - OpenMapGenerator - {% trans %}menu.newDescription{% endtrans %}{% endblock %}

{% block body %}

<h1>{% trans %}menu.newDescription{% endtrans %}</h1>

<div class="formDiv">

    <p style="font-size: 80%;"><a href="{{ path('help.tou') }}">{% trans %}label.acceptTOU{% endtrans %}</a></p>

    {{ form_start(form) }}

    {{ form_errors(form) }}

    {{ form_label(form.name) }}
    {{ form_widget(form.name) }}
    {{ form_errors(form.name) }}

    {{ form_label(form.email) }}
    {{ form_widget(form.email) }}
    {{ form_errors(form.email) }}

    <label for "language" class="required">{% trans %}label.language{% endtrans %}</label>
    <select id="language" name="language" class="fullwidth" size="1">
{% for code, name in locales %}
        <option value="{{ code }}"{% if code == app.request.attributes.get('_locale') %} selected="selected"{% endif %}>{{ name }}</option>
{% endfor %}
    </select>

    {{ form_widget(form.plainPassword) }}
    {{ form_errors(form.plainPassword) }}

    {{ form_label(form.captcha) }}
    {{ form_widget(form.captcha) }}
    {{ form_errors(form.captcha) }}

    <div class="formButtons">
        {{ form_row(form.save) }}
    </div>

    {{ form_end(form) }}

</div>

{% endblock %}
